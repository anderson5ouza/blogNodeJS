<html>

<%- include('../../partials/header.ejs'); %>

<body>

    <%- include('../../partials/navbar.ejs'); %>

    
</body>

<div class="container pt-3">

    <h3 class="mt-2 mb-2 text-center">Categorias</h3>
    <hr>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Títiulo</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        </tbody>
    
        <% categorias.forEach(categoria => { %>

            <tr>
                <td><%= categoria.id %></td>
                <td><%= categoria.title %></td>
                <td><%= categoria.slug %></td>
                <td><a class="btn btn-danger" href="/admin/categoria/excluir/<%= categoria.id %>"><i class="fa fa-trash"></i></td>
            </tr>

        <% }) %>
    
        </tbody>
    </table>

    <div class="wrapper">
        <a role="button" class="btn btn-success float-right" href="/admin/categorias/nova"><i class="fa fa-plus"></i> Nova Categoria</a>
    </div>
    
</div>


<%- include('../../partials/footer.ejs'); %>

</html>
